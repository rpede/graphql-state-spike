datasource db {
  url      = "file:dev.db"
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/.prisma/client"
}

model Profile {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  posts     Post[]
}

model Post {
  id       Int     @id @default(autoincrement())
  title    String
  body     String?
  author   Profile @relation(fields: [authorId], references: [id])
  authorId Int
}
